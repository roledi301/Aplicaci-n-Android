<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="roledi.salud.PrincipalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Bienvenidos a rSalud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:fontFamily="casual"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:text="Menu de inicio "
                android:layout_width="362dp"
                android:layout_height="match_parent"
                android:id="@+id/textView13"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:layout_marginTop="30dp"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="1">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnalta"
                        android:background="@android:drawable/ic_input_add"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:textAlignment="center"
                        android:onClick="pasaalta"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:text="Nuevo paciente"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textAlignment="center"
                        android:fontFamily="casual"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="10dp">

                    <Button
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnmodi"
                        android:background="@android:drawable/ic_menu_edit"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="pasamodi" />

                    <TextView
                        android:text="Modificar  paciente"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:fontFamily="casual"
                        android:textSize="18sp"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp">

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnconsu"
                        android:background="@android:drawable/ic_menu_help"
                        android:layout_marginLeft="20dp"
                        android:onClick="pasaconsu"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:text="Consultar paciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:fontFamily="casual"
                        android:textSize="18sp"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnbaja"
                        android:background="@android:drawable/ic_delete"
                        android:layout_marginLeft="20dp"
                        android:onClick="pasabaja" />

                    <TextView
                        android:text="Dar de baja "
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:fontFamily="casual"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="Creado por: Rocío Leal Díaz "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_marginTop="60dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="normal|italic" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
